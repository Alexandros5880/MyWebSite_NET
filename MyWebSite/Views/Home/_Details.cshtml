@model MyWebSite.Data.Models.Project






@section styles {
    <link rel="stylesheet" href="~/css/_Details.css" />
}




<script src="~/js/PayPal.js"></script>




<div class="card">

    <div class="card-header">
        <h4 class="card-title">@Model.Title</h4>
        <br />
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < @Model.Images.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@{@i}" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@{@i}"></li>
                    }
                }
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @foreach (var img in @Model.Images)
                {
                    <div class="carousel-item @(img == Model.Images.First() ? "active" : "")">
                        <img src="@Url.Content(img.ImagePath)" alt="@Model.Title" style="width: 100% !important; height: auto !important;">
                    </div>
                }
            </div>
            <!-- Previus Next -->
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br />
    </div>

    <div class="card-body">
        <h5>Description: </h5>
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-11">
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
        <br />
        <div class="row" style="display: @(Model.Price == 0.00m ? "none" : null);">
            <div class="col-md-1">
                <h5>Price:</h5>
            </div>
            <div class="col-md-11">
                <span>@(String.Format("{0:0.00}", Model.Price)) &#128;</span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-11">
                <a class="btn btn-primary" type="button" href="#" style="display: @(Model.Price != 0.00m ? "none" : null);">Download</a>
                <div style="display: @(Model.Price == 0.00m ? "none" : null);">
                    <!-- Payment Container (Here loads payment UI) -->
                    <div class="payment-window">

                    </div>
                    <a class="btn btn-primary" type="button" href="#" onclick="payPayPal(@Model.Price);">Buy it</a>
                </div>
            </div>
        </div>
    </div>

</div>









@section Scripts{
    <script src="~/js/_Details.js"></script>
}