@model MyWebSite.Data.Models.CV









@section styles{
    <link rel="stylesheet" href="~/css/Resume.css" />
}




<div class="header" />




<div class="pdf-case">
    @{
        if (@Model != null)
        {
            var path = @Url.Content(@Model.Path) + "#toolbar=1&navpanes=0&scrollbar=0&view=FitH";
            <embed class="pdf" src="@path" />
        } else
        {
            <h3 class="text-danger">No Active CV Found.</h3>
        }
    }
</div>




<div class="bottom" />






@section Scripts{
    <script src="~/js/Resume.js"></script>
}