@model MyWebSite.Data.Models.CV

@section styles{
    <link rel="stylesheet" href="~/css/Resume.css" />
}

<br />
<br />

@if (@Model != null) {
    var path = @Url.Content(@Model.CVPath) + "#toolbar=1&navpanes=0&scrollbar=0&view=FitH";

    <object type="application/pdf" class="pdf" data="@path" style="width: 100%; height: 77vh; border: 5px solid #ccc;" >
        <p>
            Your web browser doesn't have a PDF plugin.
            Instead you can <a href="@path">
                click here to
                download the PDF file.
            </a>
        </p>
    </object>
    @*<embed style="width:100%; height: 100vh;" name="plugin" id="plugin" src="@path" type="application/pdf" internalinstanceid="38">*@
    @*<iframe src="@path" type="application/pdf" class="pdf"></iframe>*@
} else {
    <h3 class="text-danger">No Active CV Found.</h3>
}

@section Scripts{
    <script src="~/js/Resume.js"></script>
}