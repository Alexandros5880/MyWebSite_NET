@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}





<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form id="account-form" method="post" style="width: 50%; margin: 0 auto;">
        <h4>Use a local account to log in.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <!-- Google CaptCha -->
            <div>
                <script type="text/javascript">
                    var onloadCallback = function () {
                        widgetId1 = grecaptcha.render('login-captcha', {
                            'sitekey': '6LdE1IgeAAAAAARd-cTTK3LOL8frSfMsqOpYu75Q',
                            'theme': 'light',
                            'callback': function (response) {
                                if (grecaptcha.getResponse() == "") {
                                    $('#login-submit').addClass('disabled');
                                } else {
                                    $('#login-submit').removeClass('disabled');
                                }
                            },
                            //'theme': 'dark'
                        });
                    };
                </script>
                <div id="login-captcha"></div>
                <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer>
                </script>
            </div>
        </div>
        <div class="form-group">
            <a id="login-submit" type="submit" class="btn btn-primary disabled"  onclick="document.getElementById('account-form').submit();">Log in</a>
        </div>
        <div class="form-group">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            @*<p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>*@
            @*<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>*@
        </div>
    </form>
</div>




@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
