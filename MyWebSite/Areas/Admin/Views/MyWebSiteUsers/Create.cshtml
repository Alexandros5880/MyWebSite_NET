@model MyWebSite.Areas.Identity.Data.MyWebSiteUser

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MyWebSiteRole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfingPassword" class="control-label"></label>
                <input asp-for="ConfingPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfingPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRolesIds" class="control-label"></label>
                <select asp-for="SelectedRolesIds" class="form-control" asp-items='new SelectList(@ViewBag.Roles,"Id","Name")'>
                </select>
                <span asp-validation-for="SelectedRolesIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewBag.Error</span>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>

<div>
    <a asp-area="Admin" asp-controller="MyWebSiteUsers" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
