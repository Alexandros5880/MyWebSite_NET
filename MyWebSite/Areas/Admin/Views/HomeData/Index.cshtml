@model IEnumerable<MyWebSite.Data.Models.HomeData>

@{
    ViewData["Title"] = "Index";
}


@section styles {
    <link rel="stylesheet" href="~/lib/DataTables/DataTables-1.11.4/css/dataTables.dataTables.min.css" />
}

<h1>Home Data Profiles</h1>



<p>
    <a asp-action="Create">Create New</a>
</p>




<div class="table-responsive" style="margin-top: 5%;">
    <table id="home-data-table" width="100%" class="row-border display"></table>
    <br />
    <br />
</div>







@section Scripts{

    <script src="~/lib/DataTables/DataTables-1.11.4/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.11.4/js/jquery.dataTables.min.js"></script>

    <script>


        $(document).ready(function () {

            var dataSet = [];
            var dataItem = [];

            @foreach (var item in Model)
            {
                @:dataItem = [];
                @:dataItem.push("@item.ID");
                @:dataItem.push("@item.Title");
                @:dataItem.push("@item.SubTitle");
                @:dataItem.push("@item.Paragraph");
                @:dataItem.push("@item.IsActive");
                <text>
                    dataItem.push(`
                        <a asp-controller="HomeData" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-controller="HomeData" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    `);
                </text>
                @:dataSet.push(dataItem);
            }


            var table = $('#home-data-table').DataTable({
                data: dataSet,
                columns: [
                    { title: "ID" },
                    { title: "Title" },
                    { title: "SubTitle" },
                    { title: "Paragraph" },
                    { title: "IsActive" },
                    null
                ],
                "pagingType": "full_numbers"
            });


            $('#home-data-table').on('click', 'tbody td', function () {
                var dataTable = $('#home-data-table').dataTable();
                var tr = $(this).closest('tr');
                var index = dataTable.fnGetPosition(tr[0]);
                var id = dataTable.fnGetData(index)[0];
                window.location.href = '/Admin/HomeData/Details/' + id;
            })

        });

    </script>

}